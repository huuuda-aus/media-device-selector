{
  "name": "react-media-device-selector",
  "version": "1.0.5",
  "description": "A React component for selecting and managing media devices (camera, microphone, speaker)",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite serve demo",
    "build:lib": "npm run build:types && npm run build:esm && npm run build:cjs && vite build --config vite.lib.config.ts",
    "build:demo": "vite build --config vite.demo.config.ts",
    "build": "npm run build:lib && npm run build:demo",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist/types --project tsconfig.app.json",
    "build:esm": "tsc --module esnext --target es2020 --outDir dist/esm --project tsconfig.app.json",
    "build:cjs": "tsc --module commonjs --target es2020 --outDir dist/cjs --project tsconfig.app.json",
    "preview": "vite preview --port 3000",
    "start": "vite serve demo",
    "test": "jest",
    "bump": "npm version patch && npm publish --access public",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "keywords": [
    "react",
    "media-devices",
    "webrtc",
    "camera",
    "microphone",
    "speaker",
    "device-selector",
    "hook",
    "typescript"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huuuda/media-devices-selector.git"
  },
  "bugs": {
    "url": "https://github.com/huuuda/media-devices-selector/issues"
  },
  "homepage": "https://github.com/huuuda/media-devices-selector#readme",
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^5.0.4",
    "babel-jest": "^29.7.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "vite": "^7.1.7"
  }
}
